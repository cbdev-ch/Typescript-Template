{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
	    "allowJs": true, 
        "outDir": "dist",
        "removeComments": true,
        "strict": true,
        "skipLibCheck": true,
        "strictNullChecks": false,
        "noImplicitThis": true,
        "inlineSourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}